{
  "$schema": "https://schema.tauri.app/config/2.0.0/capabilities",
  "identifier": "default",
  "description": "Default capabilities for SpecFlux",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "shell:allow-execute",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$HOME/**/*" }
      ]
    },
    "fs:allow-read-dir",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-stat",
    "fs:allow-exists"
  ]
}
