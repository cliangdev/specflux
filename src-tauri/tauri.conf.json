{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SpecFlux",
  "version": "0.1.0",
  "identifier": "com.specflux.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "SpecFlux",
        "width": 1440,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "AI-powered project orchestration for multi-repo development",
    "longDescription": "SpecFlux transforms vibe coding into vibe engineering. Orchestrate Claude Code AI agents across multiple repositories with structured specs, visual Kanban boards, and human-in-the-loop approval workflows.",
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "wix": {
        "language": "en-US"
      }
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      },
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libssl3", "libgtk-3-0"],
        "section": "devel"
      }
    }
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "deep-link": {
      "mobile": [],
      "desktop": {
        "schemes": ["specflux"]
      }
    }
  }
}
