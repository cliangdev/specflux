{
  "$schema": "https://schema.tauri.app/config/2.0.0/capabilities",
  "identifier": "default",
  "description": "Default capabilities for SpecFlux",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        { "name": "git", "cmd": "git", "args": true },
        { "name": "claude", "cmd": "claude", "args": true }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        { "name": "git", "cmd": "git", "args": true },
        { "name": "claude", "cmd": "claude", "args": true }
      ]
    },
    "shell:allow-stdin-write",
    "shell:allow-kill",
    "shell:allow-open",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$HOME/**/*" }
      ]
    },
    "fs:allow-read-dir",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-stat",
    "fs:allow-exists",
    "fs:allow-mkdir"
  ]
}
