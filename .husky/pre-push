#!/bin/sh

# Prevent direct pushes to main branch
protected_branch='main'
current_branch=$(git symbolic-ref HEAD | sed -e 's,.*/\(.*\),\1,')

if [ "$current_branch" = "$protected_branch" ]; then
    echo "âŒ Direct push to '$protected_branch' is not allowed."
    echo "   Please create a feature branch and open a pull request."
    exit 1
fi

# Run TypeScript type checking
echo "ğŸ” Running TypeScript type check..."
npm run typecheck --workspace=orchestrator
if [ $? -ne 0 ]; then
    echo "âŒ TypeScript type check failed. Please fix type errors before pushing."
    exit 1
fi

# Run tests
echo "ğŸ§ª Running tests..."
npm run test --workspace=orchestrator
if [ $? -ne 0 ]; then
    echo "âŒ Tests failed. Please fix failing tests before pushing."
    exit 1
fi

echo "âœ… All checks passed!"
